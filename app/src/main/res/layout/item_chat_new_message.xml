<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_8sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:contentPaddingLeft="@dimen/_14sdp"
        app:contentPaddingRight="@dimen/_14sdp"
        app:contentPaddingTop="@dimen/_6sdp"
        app:contentPaddingBottom="@dimen/_6sdp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/_14sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_new_message"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaseBlack"
            style="@style/TextAppearance.AppCompat.Small"
            app:fontFamily="@font/nunito_bold"
            tools:text="24 PESAN BELUM DIBACA"
            tools:ignore="HardcodedText" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>